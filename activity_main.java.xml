<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:tint="@color/White"
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        android:src="@drawable/logoinsta"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
   <EditText
       android:background="@drawable/roundbutton"
       android:padding="15dp"
       android:textColorHint="#E6E6E6"
       android:layout_marginTop="35dp"
       android:hint="Username"
       android:layout_width="match_parent"
       android:layout_height="55dp"
       android:id="@+id/Username"
       android:layout_marginStart="25dp"
       android:layout_marginEnd="25dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/logo"/>
    <EditText
        android:background="@drawable/roundbutton"
        android:padding="15dp"
        android:textColorHint="#E6E6E6"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/password"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Username"/>

    <TextView
        android:gravity="center"
        android:background="@drawable/roundbuttonbackground"
        android:textColor="#41FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Log In "
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/login"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"/>
    <LinearLayout
        android:id="@+id/forgot"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:orientation="horizontal"
        >
        <TextView
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Forget your login details? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Get help signing in. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    </LinearLayout>

    <View

android:layout_marginStart="27dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:alpha="0.5"
        android:background="@color/White"
        app:layout_constraintBottom_toBottomOf="@+id/or"
        app:layout_constraintEnd_toStartOf="@+id/or"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/or"
         />

    <TextView

        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OR"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
     android:layout_marginTop="25dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot"
        />
    <View

        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"

        android:layout_width="0dp"
        android:layout_height="1px"
        android:alpha="0.2"
        android:background="@color/White"
        app:layout_constraintBottom_toBottomOf="@+id/or"
     app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/or"

        app:layout_constraintTop_toTopOf="@+id/or"
        />
    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login with Facebook"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="30dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#54C5C3C3"
        android:padding="12dp"
        android:text="@string/signup"
        android:textAlignment="center"
        android:layout_marginBottom="0dp"
        android:textSize="14sp"

        android:textColor="#F2FFFFFF"

        />



</androidx.constraintlayout.widget.ConstraintLayout>